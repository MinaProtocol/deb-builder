#!/bin/bash

# Example App Script

echo "Welcome to the Example App!"

# Function to display a menu
function show_menu() {
    echo "1) Say Hello"
    echo "2) Show Date"
    echo "3) Exit"
}

# Main loop
while true; do
    show_menu
    read -p "Choose an option: " choice

    case $choice in
        1)
            echo "Hello, World!"
            ;;
        2)
            echo "Current date and time: $(date)"
            ;;
        3)
            echo "Goodbye!"
            exit 0
            ;;
        *)
            echo "Invalid option. Please try again."
            ;;
    esac
done